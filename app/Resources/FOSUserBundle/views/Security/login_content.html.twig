{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="text-center mb-4">
        <img src="{{ asset('img/logo.png') }}" alt="" width="72" height="72">
    </div>
    <h1 class="h3 mb-3 font-weight-normal">SÃ©same, ouvre-toi !</h1>

    <label for="username" class="sr-only">{{ 'security.login.username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required autocomplete="username" placeholder="Identifiant">

    <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
    <input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe" autocomplete="current-password" required>

    <div class="checkbox mb-3">
        <label for="remember_me">
            <input type="checkbox" value="on" id="remember_me" name="_remember_me">
            Rappel toi de moi
        </label>

    </div>
    <input class="btn btn-lg btn-block c-orange" type="submit" id="_submit" name="_submit" value="Connecte toi">
</form>